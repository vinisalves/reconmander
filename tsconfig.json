{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["DOM", "ES2020"],
    "types": ["electron", "node"],
    "outDir": "./dist-electron",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "noEmit": false
  },
  "include": ["src/**/*"]
}
